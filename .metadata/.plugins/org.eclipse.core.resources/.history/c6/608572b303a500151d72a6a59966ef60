package com.cipres.mrBayesPlugin.models;

import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTable;

import com.biomatters.geneious.publicapi.plugin.Options;

public class DisplayGUIModel extends Options{
	String[] columnNames = 
		{" ",
        "Job Name",
        "Date Submitted",
        "Job Status"
        };
    
    Object[][] data = {
    	    {" ", "Test1", "10/12/15", new Boolean(false)},
    	    {" ", "Test2", "12/01/15", new Boolean(true)}
    	};
    
    public DisplayGUIModel() {
	    super(DisplayGUIModel.class);
	    
    }
    
    protected JPanel createPanel(){
    	GridLayout full = new GridLayout(0,2);
    	
    	JPanel panelFull = new JPanel();
    	panelFull.setLayout(full);
	    
	    JPanel panelLeft = new JPanel();
    	JPanel panelRight = new JPanel();
	    JCheckBox box1 = new JCheckBox();
	    JButton updateButton = new JButton("Update List");
	    JButton downloadButton = new JButton("Download Job");
	    JButton deleteButton = new JButton("Delete Job");
	    
	    JTable table = createTable(data, columnNames);
	    JScrollPane scroll = new JScrollPane(table);
	    
	    panelLeft.add(scroll);
	    panelRight.add(updateButton);
	    panelRight.add(downloadButton);
	    panelRight.add(deleteButton);
	    panelFull.add(panelLeft);
	    panelFull.add(panelRight);
	    return panelFull;
    }

    private JTable createTable(Object[][] data, String[] columnNames){
    	JTable table = new JTable(data, columnNames);
    	table.setEnabled(false);
    	return table;
    }
}
