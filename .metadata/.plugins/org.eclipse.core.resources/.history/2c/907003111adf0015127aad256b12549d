package com.cipres.mrBayesPlugin.models;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;

import com.biomatters.geneious.publicapi.components.OptionsPanel;
import com.biomatters.geneious.publicapi.plugin.Options.BooleanOption;
import com.biomatters.geneious.publicapi.plugin.Options.StringOption;

/**
 * Login display model where it asks for the user's CIPRES login information
 * @author rjzheng
 *
 */
public class LoginGUIModel extends Options {

    JPasswordField passwordField;
    JTextField usernameField;
    
//    public LoginGUIModel() {
//    	
////      username = addStringOption("username","User Name","Please enter your username");
//      usernameField = new JTextField();
//      passwordField = new JPasswordField();
//      
//      panel.addComponentWithLabel("User Name", usernameField, false);
//      panel.addComponentWithLabel("Password", passwordField, false);
////      password = addStringOption("password","Password","Please enter your password");
//  }
    
    final StringOption test;
    final BooleanOption test2;
    public LoginGUIModel() {
	    super(LoginGUIModel.class);
	    test=addStringOption("test", "test", "value");
	    test2=addBooleanOption("test2", "test2", true);

    protected JPanel createPanel() {
        JPanel panel =new JPanel();

        //Add both the label and the component:
        panel.add(new JLabel(test.getLabel()));
        panel.add(test.getComponent());

        //For a boolean (checkbox)  option, it doesn't have a separate label so just add the component:
        panel.add(test2.getComponent());
        return panel;
   }
    
    /**
     * Add username and password fields to the Login interface
     */
    

    /**
     * Get the user name
     * @return user name
     */
    public String getUsername() {
        return new String(usernameField.getText());
    }

    /**
     * Get the password
     * @return password
     */
    String getPassword() {
        return new String(passwordField.getPassword());
     }
}