package com.cipres.mrBayesPlugin.models;

import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTable;

import com.biomatters.geneious.publicapi.plugin.Options;

public class DisplayGUIModel extends Options{
	String[] columnNames = 
		{" ",
        "Job Name",
        "Date Submitted",
        "Job Status"
        };
    
    Object[][] data = {
    	    {" ", "Test1", "10/12/15", new Boolean(false)},
    	    {" ", "Test2", "12/01/15", new Boolean(true)}
    	};
    
    public DisplayGUIModel() {
    	JFrame frame = new JFrame();
    	frame.add(createPanel(data, columnNames));
    	
    }

    private static JPanel createPanel(Object[][] data, String[] columnNames) {
	    JPanel panel =new JPanel();
	    JCheckBox box1 = new JCheckBox();
	    

	    JTable table = createTable(data, columnNames);
	    JScrollPane scroll = new JScrollPane(table);
	    panel.add(scroll);
	    return panel;
    }
    
    private static JTable createTable(Object[][] data, String[] columnNames){
    	JTable table = new JTable(data, columnNames);
    	table.setEnabled(false);
    	return table;
    }
}
